{
  "name": "cannabis-tracker-frontend",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      },
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://cannabis-tracker-backend.onrender.com/api/v1"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "REACT_APP_API_URL": "https://cannabis-tracker-backend.onrender.com/api/v1"
    }
  }
}
